<Window x:Class="ElectricalPowerSystems.NodeCanvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectricalPowerSystems.GUI"
        mc:Ignorable="d"
        Title="NodeCanvas" Height="450" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button/>
        </ToolBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <local:ToolboxControl Grid.Column="0"/>
            <GridSplitter Grid.Column="1" Width="3"/>
            <local:GraphViewer Grid.Column="1"/>
        </Grid>
    </DockPanel>
</Window>
